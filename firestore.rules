rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Helper function to check if user is accessing their own document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection rules
    match /users/{userId} {
      // Allow reading own profile, admin access, or public profiles for search
      allow read: if isOwner(userId) || isAdmin() || 
        (isAuthenticated() && resource.data.publicProfile == true);
      allow write: if isOwner(userId) || (isAdmin() && userId != request.auth.uid);
      // Allow users to update their own searchableDisplayName and publicProfile
      allow update: if isOwner(userId) && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['searchableDisplayName', 'publicProfile', 'updatedAt']);
    }

    // Playlists collection rules
    // Read access for all authenticated users enables social features (viewing others' movements)
    match /playlists/{playlistId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Albums collection rules
    // Albums are a shared database - read access for all authenticated users enables social features
    // Users can only write their own userEntries within albums
    match /albums/{albumId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
        request.resource.data.userEntries[request.auth.uid] != null;
    }

    // Album Mappings collection rules
    // Mappings are critical data - only admins can delete to prevent data corruption
    match /albumMappings/{mappingId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated() 
        && request.resource.data.keys().hasAll(['alternateId', 'primaryId', 'createdAt', 'updatedAt'])
        && request.resource.data.alternateId is string
        && request.resource.data.primaryId is string;
      allow delete: if isAdmin();
    }

    // Last.fm Usage Statistics collections
    // Users can only read their own usage data (identifier format: "user:{uid}")
    match /lastfmUsage/{usageId} {
      allow read: if isAuthenticated() && resource.data.identifier == "user:" + request.auth.uid;
      allow write: if false; // Only backend functions can write
    }

    match /lastfmUsageHourly/{hourlyId} {
      allow read: if isAuthenticated() && resource.data.identifier == "user:" + request.auth.uid;
      allow write: if false; // Only backend functions can write
    }

    match /lastfmUsageDaily/{dailyId} {
      allow read: if isAuthenticated() && resource.data.identifier == "user:" + request.auth.uid;
      allow write: if false; // Only backend functions can write
    }

    // Spotify Usage Statistics collections
    // Users can only read their own usage data (identifier format: "user:{uid}")
    match /spotifyUsage/{usageId} {
      allow read: if isAuthenticated() && resource.data.identifier == "user:" + request.auth.uid;
      allow write: if false; // Only backend functions can write
    }

    match /spotifyUsageHourly/{hourlyId} {
      allow read: if isAuthenticated() && resource.data.identifier == "user:" + request.auth.uid;
      allow write: if false; // Only backend functions can write
    }

    match /spotifyUsageDaily/{dailyId} {
      allow read: if isAuthenticated() && resource.data.identifier == "user:" + request.auth.uid;
      allow write: if false; // Only backend functions can write
    }

    // Friend Requests collection rules
    match /friendRequests/{requestId} {
      // Users can read requests they sent or received
      allow read: if isAuthenticated() && 
        (resource.data.fromUserId == request.auth.uid || 
         resource.data.toUserId == request.auth.uid);
      
      // Users can create requests where they are the sender
      allow create: if isAuthenticated() && 
        request.resource.data.fromUserId == request.auth.uid &&
        request.resource.data.fromUserId != request.resource.data.toUserId &&
        request.resource.data.status == 'pending';
      
      // Recipients can update to accept/decline
      allow update: if isAuthenticated() && 
        resource.data.toUserId == request.auth.uid &&
        (request.resource.data.status == 'accepted' || 
         request.resource.data.status == 'declined');
      
      // Users can delete their own outgoing requests (cancel)
      allow delete: if isAuthenticated() && 
        resource.data.fromUserId == request.auth.uid;
    }

    // Friendships collection rules
    match /friendships/{friendshipId} {
      // Users can read friendships they are part of
      allow read: if isAuthenticated() && 
        (resource.data.user1Id == request.auth.uid || 
         resource.data.user2Id == request.auth.uid);
      
      // Allow creation if user is part of the friendship and user1Id < user2Id
      allow create: if isAuthenticated() && 
        (request.resource.data.user1Id == request.auth.uid || 
         request.resource.data.user2Id == request.auth.uid) &&
        request.resource.data.user1Id < request.resource.data.user2Id;
      
      // No updates allowed (friendships are immutable)
      allow update: if false;
      
      // Users can delete friendships they are part of (unfriend)
      allow delete: if isAuthenticated() && 
        (resource.data.user1Id == request.auth.uid || 
         resource.data.user2Id == request.auth.uid);
    }

    // This rule allows anyone with your Firestore database reference to view, edit,
    // and delete all data in your Firestore database. It is useful for getting
    // started, but it is configured to expire after 30 days because it
    // leaves your app open to attackers. At that time, all client
    // requests to your Firestore database will be denied.
    //
    // Make sure to write security rules for your app before that time, or else
    // all client requests to your Firestore database will be denied until you Update
    // your rules
    // match /{document=**} {
    //   allow read, write: if request.time < timestamp.date(2024, 1, 9);
    // }
  }
}